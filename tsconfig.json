{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "ESNext",
    "target": "ESNext",
    "moduleResolution": "node",
    "verbatimModuleSyntax": false,
    "baseUrl": ".",
    "paths": {
      "@common/*": ["./src/common/*"],
      "@content/*": ["./src/content/*"],
      "@components/*": ["./src/components/*"],
      "@utilities/*": ["./src/utilities/*"],
    }
  }
}