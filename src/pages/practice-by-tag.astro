---
import Back from "@components/Back/Back.astro";
import { default as Layout } from "src/layouts/Content/Content.astro";
import RowCard from "@components/RowCard/RowCard.astro";

const tags = ["comp2804-midterm", "comp2804-exam"];
const displayTags: { [key: string]: string } = {
  "comp2804-midterm": "COMP 2804 Midterm",
  "comp2804-exam": "COMP 2804 Exam",
};
---

<Layout title="Practice By Tag">
  <div class="Question__bar">
    <div><Back href={`/`} label="Home" /></div>
  </div>
  <h1>Practice By Tag</h1>
  <p>
    Practice questions across all evaluations that are marked with a specific
    tag.
  </p>
  <div style="margin-top:2.5rem"></div>
  <div class="Evaluations__list" style="margin-bottom:0.75rem">
    {
      tags.map((tags) => (
        <div>
          <a href={`/practice/tag/${tags}`}>
            <RowCard
              title={`${displayTags[tags]} Questions`}
              icon="mdi mdi-tag"
            />
          </a>
        </div>
      ))
    }
  </div>
</Layout>

<style>
  p {
    color: gray;
  }

  .Evaluations__list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }
</style>
